import allure


@allure.feature("Создание списка")
class TestCreateList:
    @allure.title("Создание списка")
    def test_create_list(self, driver):
        main_page = MainPage(driver)
        menu_page = MenuPage(driver)
        list_page = ListPage(driver)
        main_page.click_open_menu_btn()
        menu_page.click_add_new_list_btn()
        menu_page.fill_new_list_name_field('test')
        menu_page.click_create_btn()
        list_page.

        sleep(10)