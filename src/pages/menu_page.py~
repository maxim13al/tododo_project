import allure
from src.pages.base_page import BasePage
from src.locators.menu_locator import MenuLocators

class MenuPage(BasePage):
    def __init__(self, driver):
        super().__init__(driver)

    @allure.step("Нажать на кнопку 'Добавить новый список'")
    def click_add_new_list_btn(self):
        self.click(MenuLocators.ADD_NEW_LIST_BUTTON)

    @allure.step("Нажать на кнопку 'Создать'")
    def click_create_btn(self):
        self.click(MenuLocators.CREATE_BUTTON)

    @allure.step("Заполнить поле 'Название списка' значением '{name}'") #TODO сделать через фейкер
    def fill_new_list_name_field(self, name):
        self.send_keys(MenuLocators.NEW_LIST_NAME_FIELD, name)

    @allure.step("Нажать на кнопку 'Добавить'")
    def check_display_list_in_menu(self, name):
        name_list_in_menu = self.get_text(MenuLocators.LAST_LIST)
        assert name == name_list_in_menu, f"Название спика '{name}' не совпадает с названием в меню '{name_list_in_menu}'"


